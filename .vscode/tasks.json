{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            
            "label": "run",
            "type": "shell",
            "command": "go run *.go",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "taskName": "open webview",     
            "command": "/usr/bin/google-chrome",
            "args": [
                "http://localhost:8080/"
            ],
            "presentation": { "reveal": "never" },
            "problemMatcher": []
        },
        {
            "taskName": "upload file",     
            "command": "curl",
            "args": [
                "-F",
                "file=@config.json",
                "localhost:8080/upload"
            ],
            "presentation": { "reveal": "never" },
            "problemMatcher": []
        },

        {
            "taskName": "request voice",     
            "command": "curl",
            "args": [
                "localhost:8080/action/voice"
            ],
            "presentation": { "reveal": "never" },
            "problemMatcher": []
        },
    ]
}